{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "mm"
      },
      {
        "source": "/index.html",
        "function": "mm"
      },
      {
        "source": "*",
        "function": "mm"
      },
      {
        "source": "**",
        "function": "mm"
      },
      {
        "source": "**/*.@(js|css|ico|json|jpg|png|webp)",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {"source": "/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}]},
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=1.728.000"
        } ]
    }]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {}
}
